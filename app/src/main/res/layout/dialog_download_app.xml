<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x80"
        android:layout_marginRight="@dimen/x80"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:background="@drawable/shape_round_corner_bg_white">

        <TextView
            android:id="@+id/dialog_download_app_tittle"
            style="@style/Text_16sp_2b2d2e"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y40"
            android:layout_marginLeft="@dimen/x48"
            android:text="@string/app_download_dialog_tittle"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"
            android:layout_marginTop="@dimen/y32"
            android:background="@color/color_f4f4f4"/>

        <TextView
            android:id="@+id/dialog_download_app_tip"
            style="@style/Text_16sp_2b2d2e"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y48"
            android:layout_marginLeft="@dimen/x48"
            android:text="@string/app_download_dialog_tip"/>

        <ProgressBar
            android:id="@+id/dialog_download_app_progressbar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y8"
            android:layout_marginLeft="@dimen/x48"
            android:layout_marginRight="@dimen/x48"
            android:layout_marginTop="@dimen/y56"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y16"
            android:layout_marginLeft="@dimen/x48"
            android:layout_marginRight="@dimen/x48"
            android:layout_marginBottom="@dimen/y66">

            <TextView
                android:id="@+id/dialog_download_app_percent_text"
                style="@style/Text_16sp_2b2d2e"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/dialog_download_app_value_text"
                style="@style/Text_16sp_a3a5a6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>
