<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x80"
        android:layout_marginRight="@dimen/x80"
        android:paddingBottom="@dimen/y48"
        android:background="@drawable/shape_round_corner_bg_white"
        android:layout_gravity="center">

        <TextView
            style="@style/Text_16sp_2b2d2e"
            android:id="@+id/dialog_update_app_layout_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x48"
            android:layout_marginTop="@dimen/y40"
            android:gravity="center"
            android:text="版本升级"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/dialog_update_app_layout_close"
            android:layout_width="@dimen/x70"
            android:layout_height="@dimen/y70"
            android:layout_marginRight="@dimen/x48"
            android:padding="@dimen/x20"
            android:src="@drawable/dialog_close"
            app:layout_constraintTop_toTopOf="@+id/dialog_update_app_layout_title"
            app:layout_constraintBottom_toBottomOf="@+id/dialog_update_app_layout_title"
            app:layout_constraintRight_toRightOf="parent"/>

        <View
            android:id="@+id/dialog_update_app_layout_divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"
            android:layout_marginTop="@dimen/y32"
            android:background="@color/color_f4f4f4"
            app:layout_constraintTop_toBottomOf="@+id/dialog_update_app_layout_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/dialog_update_app_layout_message"
            style="@style/Text_16sp_2b2d2e"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y48"
            android:paddingLeft="@dimen/x48"
            android:paddingRight="@dimen/x48"
            android:paddingBottom="@dimen/y32"
            android:layout_gravity="center"
            android:gravity="left"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dialog_update_app_layout_divider"/>

        <TextView
            android:textColor="@color/white"
            android:id="@+id/dialog_update_app_layout_single_button"
            style="@style/Text_16sp_2b2d2e"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y76"
            android:layout_marginLeft="@dimen/x48"
            android:layout_marginRight="@dimen/x48"
            android:layout_marginTop="@dimen/y48"
            android:gravity="center"
            android:background="@drawable/shape_gradient"
            android:text="立即升级"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dialog_update_app_layout_message" />

    </android.support.constraint.ConstraintLayout>

</FrameLayout>


