<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y66"
    android:background="@color/white"
    android:orientation="horizontal"
    android:gravity="center_horizontal"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="送货上门"
        android:textColor="@color/color_004165"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/iv_jian"
        android:layout_marginLeft="@dimen/x62"
        android:layout_width="@dimen/x36"
        android:layout_height="@dimen/y36"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/jian" />
    <EditText
        android:id="@+id/et_num"
        android:text="1"
        android:gravity="center"
        android:textColor="@color/color_7D9AAA"
        android:textSize="15sp"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:background="@drawable/shape_bg_f5f5f5_radius6"
        android:layout_width="@dimen/x86"
        android:layout_height="match_parent" />
    <ImageView
        android:id="@+id/iv_jia"
        android:layout_width="@dimen/x36"
        android:layout_height="@dimen/y36"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/jia" />
</LinearLayout>