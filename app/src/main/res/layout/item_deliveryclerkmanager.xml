<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y170"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/x30"
        android:paddingTop="@dimen/x26"
        android:paddingRight="@dimen/x30"
        android:paddingBottom="@dimen/x26">

        <TextView
            android:id="@+id/tv_del"
            android:layout_width="@dimen/x100"
            android:layout_height="@dimen/y48"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/x30"
            android:background="@drawable/shape_bg_ef1a21_radius6"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/color_EF1A21"
            android:textSize="12dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="@dimen/x120"
            android:layout_height="match_parent"
            android:src="@mipmap/head" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x26"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textColor="@color/color_004165"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_workOrderCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y24"
                android:text="--"
                android:textColor="@color/color_7D9AAA"
                android:textSize="12sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/x10"
            android:layout_height="@dimen/y20"
            android:layout_gravity="center"
            android:src="@mipmap/youjiantou" />
    </LinearLayout>

    <View style="@style/line" />
</LinearLayout>