<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <cn.bingoogolapple.bgabanner.BGAGuideLinkageLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <cn.bingoogolapple.bgabanner.BGABanner
            android:id="@+id/mBGABanner"
            style="@style/BannerDefaultStyle1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:banner_pointAutoPlayAble="false"
            app:banner_pointTopBottomMargin="@dimen/y62" />
    </cn.bingoogolapple.bgabanner.BGAGuideLinkageLayout>
    <View
        android:id="@+id/view_go"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>
    <TextView
        android:id="@+id/tv_guide_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/x30"
        android:layout_marginRight="@dimen/y30"
        android:clickable="true"
        android:padding="@dimen/x10"
        android:text="跳过"
        android:textColor="@color/color_004165"
        android:textSize="16sp"
        android:visibility="gone" />
</FrameLayout>