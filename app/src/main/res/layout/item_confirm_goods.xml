<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y130"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/x30"
        android:paddingRight="@dimen/x30">

        <TextView
            android:id="@+id/tv_productName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="--"
            android:textColor="@color/color_004165"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/iv_jian"
            android:layout_width="@dimen/x36"
            android:layout_height="@dimen/y36"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x62"
            android:src="@mipmap/jian" />

        <EditText
            android:id="@+id/et_num"
            android:layout_width="@dimen/x86"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:background="@null"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/color_004165"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/iv_jia"
            android:layout_width="@dimen/x36"
            android:layout_height="@dimen/y36"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/jia" />
    </LinearLayout>
</LinearLayout>