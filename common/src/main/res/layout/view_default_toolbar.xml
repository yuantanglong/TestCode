<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/default_toolbar"
    style="@style/MyToolbarTheme"
    android:layout_width="match_parent"
    android:layout_height="@dimen/toolBarHeight"
    android:background="@drawable/shape_gradient"
    android:fitsSystemWindows="false"
    android:minHeight="@dimen/toolBarHeight"
    app:contentInsetLeft="0.0dip"
    app:contentInsetStart="0.0dip">

    <ImageView
        android:visibility="visible"
        android:id="@+id/default_toolbar_left_image"
        android:layout_width="@dimen/toolBarHeight"
        android:layout_height="@dimen/toolBarHeight"
        android:layout_gravity="left"
        android:padding="20.0dip"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_back" />

    <LinearLayout
        android:id="@+id/ll_left"
        android:layout_width="@dimen/x100"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="visible">

        <ImageView
            android:id="@+id/iv_left"
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/y40"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/tv_left_str"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y10"
            android:text=""
            android:textColor="@color/white"
            android:textSize="12.0sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/default_toolbar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="#ffffffff"
        android:textSize="18.0sp" />

    <LinearLayout
        android:layout_gravity="right"
        android:id="@+id/ll_right"
        android:layout_width="@dimen/x100"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_right"
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/y40"
            android:layout_gravity="center"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/tv_right_str"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y10"
            android:text=""
            android:textColor="@color/white"
            android:textSize="12.0sp" />
    </LinearLayout>
</android.support.v7.widget.Toolbar>